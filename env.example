# ===== Django =====
DJANGO_SECRET_KEY=change-me-please
DJANGO_DEBUG=False
# Comma-separated list; include your server/domain/IP if deploying
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===== Database =====
# Django should parse this (e.g., via dj-database-url) OR you can read POSTGRES_* envs directly in settings.py
DATABASE_URL=postgres://app:app@db:5432/app

# If you prefer POSTGRES_* in settings instead of DATABASE_URL, you can also rely on compose's:
# POSTGRES_DB=app
# POSTGRES_USER=app
# POSTGRES_PASSWORD=app
# POSTGRES_HOST=db
# POSTGRES_PORT=5432
